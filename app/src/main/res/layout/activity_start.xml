<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#1ba881"
    android:layout_height="match_parent"
    tools:context=".ui.StartActivity">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_1"
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/im_5"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:strokeWidth="3dp"
        android:scaleType="centerCrop"
        android:padding="5dp"
        app:strokeColor="@color/white"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_2"
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/im_2"
        android:layout_margin="10dp"
        app:strokeWidth="3dp"
        app:layout_constraintStart_toStartOf="@id/img_1"
        app:layout_constraintTop_toBottomOf="@id/img_1"
        android:scaleType="centerCrop"
        android:padding="5dp"
        app:strokeColor="@color/white"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_3"
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/im_5"
        android:layout_margin="10dp"
        app:strokeWidth="3dp"
        android:scaleType="centerCrop"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/img_2"
        app:layout_constraintBottom_toBottomOf="@id/img_2"
        app:layout_constraintStart_toEndOf="@id/img_2"
        app:strokeColor="@color/white"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_4"
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/im_4"
        android:layout_margin="10dp"
        app:strokeWidth="3dp"
        app:layout_constraintStart_toEndOf="@id/img_3"
        app:layout_constraintBottom_toTopOf="@id/img_3"
        app:layout_constraintTop_toTopOf="@id/img_3"
        android:scaleType="centerCrop"
        android:padding="5dp"
        app:strokeColor="@color/white"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_5"
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/im_3"
        android:layout_marginBottom="10dp"
        app:strokeWidth="3dp"
        app:layout_constraintStart_toStartOf="@id/img_4"
        app:layout_constraintBottom_toTopOf="@id/img_4"
        android:scaleType="centerCrop"
        android:padding="5dp"
        app:strokeColor="@color/white"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_6"
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/im_4"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        app:strokeWidth="3dp"
        android:scaleType="centerCrop"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@id/img_5"
        app:layout_constraintTop_toTopOf="@id/img_5"
        app:strokeColor="@color/white"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_7"
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/im_1"
        android:layout_margin="10dp"
        app:strokeWidth="3dp"
        android:scaleType="centerCrop"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@id/img_5"
        app:layout_constraintTop_toBottomOf="@id/img_6"
        app:strokeColor="@color/white"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />



    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_8"
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/im_2"
        android:layout_margin="10dp"
        app:strokeWidth="3dp"
        android:scaleType="centerCrop"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@id/img_5"
        app:layout_constraintTop_toBottomOf="@id/img_7"
        app:strokeColor="@color/white"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@id/img_1"
        app:layout_constraintEnd_toStartOf="@id/img_5"
        android:scaleType="center"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toTopOf="@id/img_3"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ofont"
        android:text="Ramazon\ntaqvimi"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:lineSpacingMultiplier="0.6"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/img_3"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cr"
        android:text="Saharlik va iftorlik vaqtlarini o'tkazib\nyubormang. "
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginHorizontal="12dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card_view"
        android:layout_marginBottom="12dp"
        android:textSize="24dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:outlineSpotShadowColor="#0A8362"
        android:outlineAmbientShadowColor="#096C51"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/cr"
            android:text="Boshlash"
            android:textStyle="bold"
            android:textColor="@color/app_color"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt2"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>